.court-container {
  text-align: center;
  margin-top: 60px;
}

.court {
  display: flex;
  flex-direction: column;
  width: 360px;
  height: 200px;
  border: 1px solid black;
  margin: auto;
  background-color: #f4f4f4;
  position: relative;
  align-items: center;
}

.row {
  display: flex;
  justify-content: space-around;
  width: 100%;
  margin-bottom: 0px;
}

.player-box {
  width: 80px;
  height: 80px;
  background-color: lightblue;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: bold;
  text-align: center;
  user-select: none;
}

.server {
  background-color: yellow; /* Highlights the server */
}

.net {
  position: absolute;
  top: 0%;
  left: 0;
  width: 100%;
  height: 1px;
  background-color: red;
  text-align: center;
  color: red;
  font-weight: bold;
}



.touched {
  background-color: orange !important;
}


.court-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.court-layout {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0px;
  position: relative;
}

.volleyball-container {
  position: absolute;
  left: 10%;
  top: -30%;  /* Center the ball */
}

.volleyball-default {
  position: absolute;
  left: 10%;
  top: -30%;  /* Center the ball */
  }

.volleyball-in-play-zone {
  top: -70px; /* Ball in play zone */
}

.volleyball-kill-zone {
  top: 0px;
  right:30px; /* Ball in kill zone */
}

.volleyball-error {
  left: 10px; /* Ball in error zone */
  top: 300px;
}

.volleyball-server {
  top: 400px; /* Moves to server position (Position 1) */
}




.volleyball {
  width: 30px;
  height: 30px;
  font-size: 40px;
  cursor: grab;
}

.kill-zone {
  position: absolute;
  top: -60px;
  left: 35%;
  width: 100px;
  height: 40px;
  background-color: green;
  color: white;
  text-align: center;
  line-height: 40px;
}

.inplay-zone {
  position: absolute;
  top: -60px;
  right: 35%;
  width: 100px;
  height: 40px;
  background-color: blue;
  color: white;
  text-align: center;
  line-height: 40px;
}

.error-zone {
  width: 100px;
  height: 200px;
  background-color: red;
  color: white;
  text-align: center;
  line-height: 40px;
  position: absolute;
  left: -120px;
}

.opponent-service-zone {
  position: absolute;
  top: -85px;
  left: 45%;
  width: 240px;
  height: 40px;
  background-color: white;
  color: orange;
  text-align: left;
  font-weight: bold;
  line-height: 40px;
}

.free-ball-zone {
  position: absolute;
  top: -0px;
  left: 65%;
  width: 60px;
  height: 60px;
  border-radius: 50%;
  background-color: purple;
  color: white;
  text-align: center;
  line-height: 60px;
  font-weight: bold;
}
