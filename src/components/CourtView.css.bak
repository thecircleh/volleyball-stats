/* ---------------------- */
/* ðŸ”¹ GENERAL LAYOUT */
/* ---------------------- */
.court-container {
  text-align: center;
  margin-top: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  position: relative;
}

.court-layout {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  width: 90%;
  max-width: 500px;
}

/* ---------------------- */
/* ðŸ”¹ COURT STYLING */
/* ---------------------- */
.court {
  display: flex;
  flex-direction: column;
  width: 300%;
  max-width: 300px;
  height: 120px;
  border: 1px solid black;
  margin: auto;
  background-color: #f4f4f4;
  position: relative;
  align-items: center;
}

.row {
  display: flex;
  justify-content: space-around;
  width: 100%;
  margin-bottom: 0px;
}

.player-box {
  width: 60px;
  height: 60px;
  margin: 0px;
  background-color: lightblue;
  border-radius: 10%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  text-align: center;
  transition: background-color 0.2s ease-in-out;
}
.server {
  background-color: yellow;
  color: red;  /* Highlights the server */
}

/* ---------------------- */
/* ðŸ”¹ NET & ZONES */
/* ---------------------- */
.net {
  position: absolute;
  top: 0%;
  left: 0;
  width: 100%;
  height: 3px;
  background-color: red;
  text-align: center;
  color: red;
  font-weight: bold;
}

/* Touch indicator */
.touched {
  background-color: orange !important;
}

/* ---------------------- */
/* ðŸ”¹ VOLLEYBALL POSITIONING */
/* ---------------------- */
.volleyball-container {
  position: absolute;
  left: 50%;
  top: -20%;
}

.volleyball {
  width: 30px;
  height: 30px;
  font-size: 40px;
  cursor: grab;
}

/* âœ… Keeps ball inside zones */
.volleyball-in-play-zone { top: -70px; }
.volleyball-kill-zone { top: 0px; right: 30px; }
.volleyball-error { left: 10px; top: 300px; }
.volleyball-server { top: 400px; }

/* ---------------------- */
/* ðŸ”¹ ZONE STYLING */
/* ---------------------- */
.kill-zone {
  position: absolute;
  top: -50px;
  left: -70%;
  width: 100px;
  height: 40px;
  background-color: green;
  color: white;
  text-align: center;
  line-height: 40px;
}

.inplay-zone {
  position: absolute;
  top: -50px;
  right: -70%;
  width: 100px;
  height: 40px;
  background-color: blue;
  color: white;
  text-align: center;
  line-height: 40px;
}

.error-zone {
  width: 100px;
  height: 120px;
  background-color: red;
  color: white;
  text-align: center;
  line-height: 40px;
  position: absolute;
  top: 0; 
  left: -70%;
}

.opponent-service-zone {
  position: absolute;
  top: -90px;
  left: 50%;
  transform: translateX(-50%);
  width: 180px;
  height: 40px;
  background-color: white;
  color: orange;
  text-align: center;
  font-weight: bold;
  line-height: 40px;
}

.free-ball-zone {
  position: absolute;
  top: -0px;
  right: -60%;
  width: 70px;
  height: 70px;
  border-radius: 50%;
  background-color: white;
  border-color: purple;
  color: purple;
  text-align: center;
  line-height: 60px;
}

/* ---------------------- */
/* ðŸ”¹ SCOREBOARD */
/* ---------------------- */
.scoreboard-container {
  position: relative;
  margin-top: 20px;
  width: 320px;
  background-color: #222;
  color: white;
  padding: 10px;
  border-radius: 10px;
  text-align: center;
  font-size: 1.2rem;
  z-index: 10;
}
.court-controls {
  display: flex;
  justify-content: center;
  gap: 15px;
  margin-top: 10px; /* âœ… Ensures proper spacing */
}

.court-controls button {
  background-color: #222;
  color: white;
  border: none;
  padding: 2px;
  border-radius: 2px;
  cursor: pointer;
  font-size: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.court-controls button:hover {
  background-color: green;
}


